<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	
	<!-- Changer cette valeur en "Production" lors du déploiement final de l'application -->
	<!--  context référence notre application en JEE -->
	<!--  Ce paramètre permet de configurer l'extension de nos vues -->
	<context-param>
		<!-- En production utiliser le paramètre ci-dessus -->
		<!--  <param-name>javax.faces.DEFAULT_SUFFIX</param-name> -->
		<!-- <param-value>.xhtml</param-value> -->
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	
	<!-- Déclaration du contrôleur central : FacesServlet -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
 
	<!-- Mapping : association des requêtes dont le fichier porte l'extension .xhtml à la FacesServlet -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<!-- Configuration page d'accueil par défaut-->
	<welcome-file-list>
        <welcome-file>createCustomer.xhtml</welcome-file>
    </welcome-file-list>
	
	<!-- Configuration durée de la session par défaut : 30 min -->
	<!--<session-config>
		   <session-timeout>20</session-timeout>
	</session-config> -->
	<listener>
		<listener-class>fr.m2i.crm.config.InitDaoFactory</listener-class>
    </listener>
	
</web-app>
